<?xml version="1.0" encoding="utf-8"?>

<!-- ANIMATION COPIED FROM https://developer.android.com/training/animation/cardflip.html -->
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Before rotating, immediately set the alpha to 0. -->
    <objectAnimator
        android:valueFrom="@integer/alphaOpaque"
        android:valueTo="@integer/alphaTransparent"
        android:propertyName="imageAlpha"
        android:duration="0" />

    <!-- Rotate. -->
    <objectAnimator
        android:valueFrom="0"
        android:valueTo="180"
        android:propertyName="rotationY"
        android:interpolator="@android:interpolator/accelerate_decelerate"
        android:duration="500" />

    <!-- Half-way through the rotation (see startOffset), set the alpha to 1. -->
    <objectAnimator
        android:valueFrom="@integer/alphaTransparent"
        android:valueTo="@integer/alphaOpaque"
        android:propertyName="imageAlpha"
        android:startOffset="250"
        android:duration="0" />
</set>