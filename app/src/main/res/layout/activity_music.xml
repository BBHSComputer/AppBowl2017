<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/music_description"
        style="@android:style/TextAppearance.Small"
        />

    <android.support.percent.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoreText"
        android:id="@+id/songCards"
        >
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/song1Card"
            app:layout_heightPercent="22.5%">
            <android.support.percent.PercentRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_widthPercent="100%">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="5dp"
                        android:text="@string/star_spangled_banner"
                        android:textColor="@color/primary_text_default_material_light"
                        style="@android:style/TextAppearance.Medium" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="0dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="5dp"
                        android:text="Francis Scott Key"
                        android:textColor="@color/primary_text_default_material_light"
                        style="@android:style/TextAppearance.Small" />
                    <Button
                        style="@android:style/TextAppearance.Medium"
                        android:id="@+id/song1button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="5dp"
                        android:text="@string/play2"
                        android:textColor="@color/accent_material_light" />
                </LinearLayout>
            </android.support.percent.PercentRelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/song2Card"
            android:layout_below="@+id/song1Card"
            app:layout_heightPercent="22.5%">
            <android.support.percent.PercentRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_widthPercent="100%">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="5dp"
                        android:text="@string/take_me_out_to_the_ball_game"
                        android:textColor="@color/primary_text_default_material_light"
                        style="@android:style/TextAppearance.Medium" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="0dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="5dp"
                        android:text="Jack Norworth and Albert Von Tilzer"
                        android:textColor="@color/primary_text_default_material_light"
                        style="@android:style/TextAppearance.Small" />
                    <Button
                        style="@android:style/TextAppearance.Medium"
                        android:id="@+id/song2button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="5dp"
                        android:text="@string/play2"
                        android:textColor="@color/accent_material_light" />
                </LinearLayout>
            </android.support.percent.PercentRelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/song3Card"
            android:layout_below="@id/song2Card"
            app:layout_heightPercent="22.5%">
            <android.support.percent.PercentRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_widthPercent="100%">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="5dp"
                        android:text="@string/fur_elise"
                        android:textColor="@color/primary_text_default_material_light"
                        style="@android:style/TextAppearance.Medium" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="0dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="5dp"
                        android:text="Ludwig van Beethoven"
                        android:textColor="@color/primary_text_default_material_light"
                        style="@android:style/TextAppearance.Small" />
                    <Button
                        style="@android:style/TextAppearance.Medium"
                        android:id="@+id/song3button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="5dp"
                        android:text="@string/play2"
                        android:textColor="@color/accent_material_light" />
                </LinearLayout>
            </android.support.percent.PercentRelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/song4Card"
            android:layout_below="@+id/song3Card"
            app:layout_heightPercent="22.5%">
            <android.support.percent.PercentRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_widthPercent="100%">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="5dp"
                        android:text="@string/heart_and_soul"
                        android:textColor="@color/primary_text_default_material_light"
                        style="@android:style/TextAppearance.Medium" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="0dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="5dp"
                        android:text="Hoagy Carmichael"
                        android:textColor="@color/primary_text_default_material_light"
                        style="@android:style/TextAppearance.Small" />
                    <Button
                        style="@android:style/TextAppearance.Medium"
                        android:id="@+id/song4button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="5dp"
                        android:text="@string/play2"
                        android:textColor="@color/accent_material_light" />
                </LinearLayout>
            </android.support.percent.PercentRelativeLayout>

        </android.support.v7.widget.CardView>

    </android.support.percent.PercentRelativeLayout>



</android.support.percent.PercentRelativeLayout>