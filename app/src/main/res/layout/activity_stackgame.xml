<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/stack_field"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/game2_bbar"
        android:layout_below="@+id/stack_life"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"></RelativeLayout>

    <LinearLayout
        android:id="@+id/game2_bbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/game2_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/home" />

        <Button
            android:id="@+id/game2_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pause" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/stack_life"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/paleTurquoise"
        app:layout_heightPercent="5%" />

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/stack_pause"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color3">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rule_Text"
            android:layout_centerHorizontal="true"
            app:layout_heightPercent="35%"
            app:layout_widthPercent="35%">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/stack_ruleAccept"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:clickable="true"
                android:padding="20dp"
                app:borderWidth="0dp"
                app:backgroundTint="@color/colorAccent"
                app:elevation="10dp"
                app:fabSize="normal"
                app:srcCompat="@android:drawable/ic_media_play" />
        </FrameLayout>

        <TextView
            android:id="@+id/rule_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="100dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" />
    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>