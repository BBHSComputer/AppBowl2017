<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/game2InfoLayout"
            android:scrollbars="vertical">

            <TextView
                android:text="@string/game2_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:id="@+id/game2_title"
                tools:text="@string/game2_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="45sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:text="@string/game_rules_title"
                tools:text="@string/game2_description" />

            <TextView
                android:text="@string/game2_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton"
                android:layout_centerHorizontal="true"
                android:id="@+id/game2_description"
                tools:text="@string/game2_description"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:fontFamily="sans-serif"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="10dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="130dp">

            </FrameLayout>

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="20dp">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_menu_manage"
            android:id="@+id/game2_settings"
            android:layout_margin="8dp"
            app:elevation="6dp" />
    </FrameLayout>

    <FrameLayout android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="8dp">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/game2_play"
            android:layout_margin="8dp"
            app:elevation="6dp" />
    </FrameLayout>

</RelativeLayout>