<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bbhs.appbowl2017">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StackActivity2"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".StackActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".StackSettingsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".StackWin"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".TileSettingsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".TileGameActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".TileWinActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".SummationGame"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".MusicActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
    </application>

</manifest>